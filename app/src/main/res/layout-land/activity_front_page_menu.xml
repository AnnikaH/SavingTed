<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:background="@drawable/hangman_liggende"
    tools:context=".FrontPageMenuActivity"
    android:gravity="right"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/land_buttons_horizontal_margin"
        android:gravity="right">

        <Button
            android:layout_width="@dimen/menu_button_width"
            android:layout_height="@dimen/menu_button_height"
            android:background="@drawable/menu_button_background"
            android:text="@string/new_game"
            android:id="@+id/new_game_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:onClick="newGameButtonClicked"
            android:textColor="@color/white" />
        <Button
            android:layout_width="@dimen/menu_button_width"
            android:layout_height="@dimen/menu_button_height"
            android:background="@drawable/menu_button_background"
            android:text="@string/rules"
            android:id="@+id/rules_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:onClick="rulesButtonClicked"
            android:textColor="@color/white" />
        <Button
            android:layout_width="@dimen/menu_button_width"
            android:layout_height="@dimen/menu_button_height"
            android:background="@drawable/menu_button_background"
            android:text="@string/settings"
            android:id="@+id/settings_menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:onClick="settingsButtonClicked"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
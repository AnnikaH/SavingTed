<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grassGreen"
    tools:context=".FrontPageMenuActivity" >

    <ImageView android:contentDescription="@string/image_description"
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:background="@drawable/hangman_forste" />

    <!-- Space for word to be guessed: -->
    <LinearLayout
        android:id="@+id/guessing_word_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" >
        <!-- A TextView for each letter of the word is created in the java-code -->
    </LinearLayout>

    <!-- Keyboard: -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/keyboard_layout_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >
            <!-- Buttons for each letter is created in the java-code -->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keyboard_layout_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >
            <!-- Buttons for each letter is created in the java-code -->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keyboard_layout_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >
            <!-- Buttons for each letter is created in the java-code -->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>